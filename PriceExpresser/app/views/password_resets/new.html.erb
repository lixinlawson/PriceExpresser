<h1>Password Resets</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_tag password_resets_path, :method => :post do %>
	    <%= label_tag :email%>
	    <%= text_field_tag :email, params[:email], class: 'form-control'%>
		<%= submit_tag "Reset Password", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>