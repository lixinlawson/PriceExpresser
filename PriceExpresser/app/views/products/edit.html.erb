<h1>Editing Product</h1>
 
<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
 
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :product_name %>
  </p>
 
  <p>
    <%= f.label :Category %><br>
    <%= f.select :category, [['Electronic','electronic'],['Appliances','appliances'],['Others','others']] %>
  </p>
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit "Save Product", class: "btn btn-primary"%>
  </p>
<% end %>
 
<%= link_to 'Back', products_path%>

